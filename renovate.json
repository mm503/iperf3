{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": false,
  "mode": "auto",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "# renovate: datasource=repology depName=alpine_[0-9]+/iperf3\n\\s*(?:ENV|ARG) IPERF3_VERSION=(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "repology",
      "depNameTemplate": "alpine_3_21/iperf3"
    }
  ]
}
